<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.Dao.data">

    <!-- 查询语句 -->
    <select id="selectid" parameterType="int" resultType="com/example/demo/Domain/Emp">
        SELECT * FROM user
        <where>
            <if test="id !=null">
                id=#{id}
            </if>
        </where>
        order by id asc
    </select>
    <select id="selectByIds" resultType="com/example/demo/Domain/Emp">
        SELECT * FROM Emp
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
    <!-- 公共字段列表 -->
    <sql id="base_column_list">
        id, name, age
    </sql>

    <!-- 查询 -->
    <select id="select11" parameterType="int" resultType="com/example/demo/Domain/Emp">
        SELECT
        <include refid="base_column_list"/>
        FROM user
        WHERE id = #{id}
    </select>


</mapper>
